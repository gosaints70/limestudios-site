<!-- Blog -->
<section id="blog-posts" class="blog-posts row row-fullwidth">
  {{#withSort post 'this.data.date'}}
    {{#each this.pages}}
      {{#is this.data.size 'medium'}}
      <article class="blog-post col-p-12 col-wp-12 col-t-12 col-wt-6 col-c-6 article">
      {{else}}
        {{#is this.data.size 'small'}}
        <article class="blog-post col-p-12 col-wp-12 col-t-6 col-wt-3 col-c-3 article">
        {{else}}
        <article class="blog-post col-p-12 col-wp-12 col-t-6 col-wt-3 col-c-3 article">
        {{/is}}
      {{/is}}
        <div class="caption-bg col" style="background-color: {{assignColor this.data.tag}};">
          <span class="text-title hide-on-p hide-on-wp">{{this.data.title}}</span>
        </div>
        <a href="{{href this.dest 'releases/dev-release' ''}}" rel="prefetch" rel=prefetch role=link>
          <div class="caption col">
            <span class="col text-title hide-on-t hide-on-wt hide-on-c">{{this.data.title}}</span>
            <section class="col article-preview-description text-body-1">
              {{#if this.data.description}}
                {{this.data.description}}
              {{else}}
                There is no description for this article...
              {{/if}}
            </section>
            <section class="col article-date">
              {{#if this.data.date-updated}}
                <p class="text">Published on <time>{{date this.data.date-published}}</time> [Updated on <time>{{date this.data.date-updated}}</time>]</p>
                {{else}}
                <p class="text">Published on <time>{{date this.data.date-published}}</time></p>
              {{/if}}
          </section>
          </div>
        </a>
      </article>
    {{/each ~}}
  {{/withSort ~}}
</section>
